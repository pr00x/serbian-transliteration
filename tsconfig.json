{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["ES2018"],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}